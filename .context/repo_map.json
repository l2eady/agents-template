{
    "meta": {
        "version": "1.0",
        "updated_at": "2024-01-01"
    },
    "project_config": {
        "base_jira_url": "https://your-company.atlassian.net",
        "repo_staging_url": "https://api.staging.your-domain.com"
    },
    "active_repos": [
        "backend-service",
        "frontend-web",
        "infrastructure"
    ],
    "routing_rules": {
        "description": "Map file patterns to Personas",
        "rules": [
            {
                "glob": "**/*.go",
                "persona": "[Workspace_Root]/.antigravity/personas/gopher.md",
                "stack": "go"
            },
            {
                "glob": "**/*.tsx",
                "persona": "[Workspace_Root]/.antigravity/personas/pixel.md",
                "stack": "react"
            },
            {
                "glob": "**/*.py",
                "persona": "[Workspace_Root]/.antigravity/personas/snake.md",
                "stack": "python"
            },
            {
                "glob": "**/*.tf",
                "persona": "[Workspace_Root]/.antigravity/personas/infra.md",
                "stack": "terraform"
            }
        ]
    },
    "commands": {
        "description": "Polymorphic commands for Quality Check workflow",
        "test": {
            "go": "go test -v ./...",
            "react": "npm test -- --watchAll=false",
            "python": "pytest -v",
            "terraform": "terraform validate"
        },
        "lint": {
            "go": "golangci-lint run",
            "react": "npm run lint",
            "python": "flake8"
        }
    }
}